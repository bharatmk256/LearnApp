<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Linear_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btcorner"
        android:onClick="openLinear_Layout"
        android:text="Linear layout"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Relative_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btcorner2"
        android:onClick="openRelative_Layout"
        android:text="Relative layout"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Constraint_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btcorner"
        android:onClick="openConstraint_Layout"
        android:text="constraint layout"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btcorner2"
        android:onClick="openScroll_View"
        android:text="Scroll view"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btcorner"
        android:onClick="openCard_View"
        android:text="Card view"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btcorner2"
        android:onClick="openJava"
        android:text="Java"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btcorner"
        android:onClick="openKotlin"
        android:text="kotlin"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>